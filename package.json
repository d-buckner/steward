{
  "name": "@d-buckner/steward",
  "version": "1.0.0",
  "description": "A service-based architecture with dependency injection and event bus for frontend applications",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "main": "./dist/steward.cjs",
  "module": "./dist/steward.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/steward.js",
      "require": "./dist/steward.cjs"
    },
    "./vite": {
      "types": "./src/build/vite-plugin.d.ts",
      "import": "./src/build/vite-plugin.js",
      "require": "./src/build/vite-plugin.js"
    },
    "./worker/worker-registry": {
      "types": "./dist/worker/worker-registry.d.ts",
      "import": "./src/worker/worker-registry.ts",
      "require": "./src/worker/worker-registry.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "build.js"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "npm run build:core && turbo build",
    "build:packages": "turbo build",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "typecheck": "turbo typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:core": "vite build",
    "test:core": "vitest",
    "test:core:run": "vitest run",
    "typecheck:core": "tsc --noEmit",
    "test:e2e": "npx vitest run test/e2e/worker-action-routing.test.ts",
    "test:ui": "npx playwright test test/e2e/automated-ui-validation.test.ts",
    "validate:ui": "./test/e2e/run-ui-validation.js",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "service-architecture",
    "dependency-injection",
    "event-bus",
    "frontend",
    "typescript"
  ],
  "author": "Daniel Buckner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-buckner/steward.git"
  },
  "homepage": "https://github.com/d-buckner/steward#readme",
  "bugs": {
    "url": "https://github.com/d-buckner/steward/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "reflect-metadata": "^0.2.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "glob": "^11.0.3",
    "playwright": "^1.55.0"
  }
}
