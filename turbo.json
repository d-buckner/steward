{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "*.config.*", "package.json"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "test/**", "*.config.*", "package.json"],
      "outputs": []
    },
    "test:run": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "test/**", "*.config.*", "package.json"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "*.config.*", "package.json", "tsconfig.json"],
      "outputs": []
    },
    "lint": {
      "inputs": ["src/**", "*.config.*", "package.json"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    "turbo.json",
    "tsconfig.json"
  ]
}